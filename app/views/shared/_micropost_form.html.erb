<%= form_for(@micropost, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <span class="counter" data-toggle="tooltip" title="characters remaining">140</span>
  <%= f.submit "Post", class: "btn btn-primary", disabled: true %>
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
<% end %>

<%= javascript_include_tag 'microposts'  %>

